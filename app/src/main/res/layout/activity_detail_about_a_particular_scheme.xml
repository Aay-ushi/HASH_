<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="com.example.mani.hash.DetailAboutAParticularScheme">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="24dp"
            style="@style/Base.TextAppearance.AppCompat.Display1"/>

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eligiblity"
            android:textSize="24dp"
            style="@style/Base.TextAppearance.AppCompat.Display1"/>

        <TextView
            android:id="@+id/textview_eligiblity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text=""
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benefits"
            android:textSize="24dp"
            style="@style/Base.TextAppearance.AppCompat.Display1"/>

        <TextView
            android:id="@+id/textView_benefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text=""
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to Apply"
            android:textSize="24dp"
            style="@style/Base.TextAppearance.AppCompat.Display1"/>

        <TextView
            android:id="@+id/textview_how_to_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Websites"
            android:textSize="24dp"
            style="@style/Base.TextAppearance.AppCompat.Display1"/>

        <TextView
            android:id="@+id/textview_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/link"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Resouces"
            android:textSize="24dp"
            style="@style/Base.TextAppearance.AppCompat.Display1"/>

        <TextView
            android:id="@+id/textview_additional_resources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="" />


    </LinearLayout>

</ScrollView>
